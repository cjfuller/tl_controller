{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "target": "ES5",
        "lib": [
            "DOM"
        ],
        "baseUrl": ".",
        "skipLibCheck": true,
        "jsx": "react",
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}